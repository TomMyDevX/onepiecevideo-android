<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_d"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Video Mode"
        android:background="@drawable/app_background_header"
        android:typeface="sans"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/groupmoviemode"
        android:layout_width="fill_parent"
        android:paddingLeft="30dp"
        android:layout_height="wrap_content" >

    <RadioButton
        android:id="@+id/modeonepiece"
        android:button="@drawable/list_lang_check" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="One Piece" />

    <RadioButton
        android:id="@+id/modemovie"
        android:button="@drawable/list_lang_check" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="One Piece The Movie         " />
    </RadioGroup>

    <CheckBox
        android:id="@+id/closedialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:button="@drawable/check_close" />

</LinearLayout>