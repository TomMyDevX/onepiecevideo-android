<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whitef5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/maskheader"
        android:gravity="left" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="77dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ficon" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="One Piece"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/grayf5"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/us" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </LinearLayout>

            <TextView
                android:id="@+id/modestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mode"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listrl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/whitef5"
            android:clickable="true"
            android:fadingEdge="none"

            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/dfdsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/maskheader"
            android:layout_alignRight="@+id/list"
            android:layout_alignTop="@+id/list"
            android:layout_marginTop="15dp"
                		android:focusable="true"
    		android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view_slide_up_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <CheckBox
                    android:id="@+id/updown_silde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:button="@drawable/check_slide"
                    android:paddingRight="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/up_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:src="@drawable/up_arrow" />

                        <ImageView
                            android:id="@+id/onplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:src="@drawable/play_basic_yellow" />

                        <ImageView
                            android:id="@+id/down_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <AutoCompleteTextView
                    android:id="@+id/go_src"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                </AutoCompleteTextView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/loading"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:background="@drawable/maskheader"
            android:gravity="center"
            android:text="Load Complete"
            android:textColor="#007CFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/maskheader"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1" >

            <CheckBox
                android:id="@+id/en"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/list_lang_us" />

            <CheckBox
                android:id="@+id/fr"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/fr" />

            <CheckBox
                android:id="@+id/ge"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/ge" />

            <CheckBox
                android:id="@+id/es"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/flag_sp" />

            <CheckBox
                android:id="@+id/th"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/flag_th2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/bt_img_menu"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:button="@drawable/system_config_boot" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>