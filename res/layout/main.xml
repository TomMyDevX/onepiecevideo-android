<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/app_background_header" 
        android:gravity="left" >

        <LinearLayout
            android:layout_width="wrap_content"  android:layout_weight="1" 
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="77dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ficon" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="One Piece Video"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp" android:orientation="vertical" android:gravity="center" android:background="@drawable/app_background_d"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/icon_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/us" />

            <LinearLayout
                android:layout_width="match_parent"  android:gravity="center"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/Online1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/Online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <ListView
        android:id="@+id/list"
        android:clickable="true"
     
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/loading"
            android:layout_width="fill_parent"
            android:background="@drawable/app_background_header"
            android:layout_height="65dp"
            android:gravity="center"
            android:textColor="#007CFF"
            android:text="Load Complete" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_background_d"
        android:gravity="right" 
        
        >

        <LinearLayout
            android:layout_width="wrap_content" android:layout_gravity="left" android:layout_weight="1"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/en"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/list_lang_us" />

            <CheckBox
                android:id="@+id/ge"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/ge" />

            <CheckBox
                android:id="@+id/es"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/flag_sp" />

            <CheckBox
                android:id="@+id/th"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/flag_th2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/bt_img_menu"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:button="@drawable/system_config_boot" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
